@using blogen.Models
@model Category


<!--HEADER-->
<header class="bg-danger text-white py-2">
    <div class="container">
        <h1>
            <i class="fa fa-folder"></i>  @ViewBag.Title
        </h1>
    </div>
</header>
<div class="container">
    <section class="mt-4">
        Are you sure that you want to delete the category with a title of "@Model.Title" ?
    </section>
    <!--Body-->
    <section class="mt-4">
        @using (Html.BeginForm())
        {
            <input type="submit" class="btn btn-danger" value="Confirm Delete"/>
            @Html.ActionLink("Cancel", "Index",null,new { @class = "btn btn-secondary"})
        }
    </section>
</div>